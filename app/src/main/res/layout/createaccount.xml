<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/creating">

    <ImageView
        android:id="@+id/createbtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_x="50dp"
        android:layout_y="400dp"
        android:src="@drawable/createbtn" />

    <ImageView
        android:id="@+id/cancelbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="250dp"
        android:layout_y="400dp"
        android:src="@drawable/cancelbtn" />

    <EditText
        android:id="@+id/createid"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_x="160dp"
        android:layout_y="70dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="40dp" />

    <EditText
        android:id="@+id/createpw"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_x="160dp"
        android:layout_y="150dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/createid"
        tools:layout_editor_absoluteX="135dp" />

    <EditText
        android:id="@+id/checkpw"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_x="160dp"
        android:layout_y="225dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/createpw"
        tools:layout_editor_absoluteX="137dp" />

</AbsoluteLayout>